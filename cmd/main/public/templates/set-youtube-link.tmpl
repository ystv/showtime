{{ define "set-youtube-link" }}
<!DOCTYPE html>
<html>
  <head>
    <title>Link {{ .Playout.Title }} to YouTube</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
/>
<script
  defer
  src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
></script>
  </head>
  <body>
  <div class="column has-text-centered">
    <h1 class="title">{{ .Playout.Title }}</h1>
    <form action="/playouts/{{ .Playout.PlayoutID }}/link/youtube/confirm" method="post">
        <label for="broadcastID">Select a livestream to link to:</label>
        <select name="broadcastID">
            {{ range .Broadcasts }}
                <option value="{{ .ID }}">{{ .Title }} ({{ .PrettyDateTime }})</option>
            {{ end }}
        </select>
        <input type="submit" value="Link to playout" />
    </form>
    <p>
        Remember to schedule your YouTube livestream before trying to link it.
    </p>
    </div>
  </body>
</html>
{{ end }}