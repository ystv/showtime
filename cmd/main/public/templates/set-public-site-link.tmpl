{{ define "set-public-site-link" }}
<!DOCTYPE html>
<html>
  <head>
    <title>Link {{ .Playout.Title }} to YSTV website</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
/>
<script
  defer
  src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
></script>
  </head>
  <body>
  <div class="column has-text-centered">
    <h1 class="title">{{ .Playout.Title }}</h1>
    <form action="/playouts/{{ .Playout.PlayoutID }}/link/public-site/confirm" method="post">
        <label for="channel">Select a destination to link to:</label>
        <select name="channelID">
            {{ range .Channels }}
                <option value="{{ .ID }}">{{ .Title }}</option>
            {{ end }}
                <option value="direct">Direct</option>
        </select>
        <input type="submit" value="Link to playout" />
    </form>
    </div>
  </body>
</html>
{{ end }}
