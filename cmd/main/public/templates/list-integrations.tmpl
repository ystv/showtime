{{ define "list-integrations" }}
<!DOCTYPE html>
<html>
  <head>
    <title>Integrations</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
/>
<script
  defer
  src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
></script>
<style>
body {
    background: #F2F6FA;
    height: 100vh;
  }
.board-item {
  margin: 5px 0;
  will-change: transform;
}

.board-item-content {
  word-break: break-all;
  position: relative;
  padding: 20px;
  background: #fff;
  border-radius: 4px;
  font-size: 17px;
  text-align: center;
  cursor: pointer;
  -webkit-box-shadow: 0px 1px 3px 0 rgba(0,0,0,0.2);
  box-shadow: 0px 1px 3px 0 rgba(0,0,0,0.2);
  margin: 5px;
}
</style>
  </head>
  <body>
        <nav class="navbar is-white">
    <div class="navbar-menu">
      <p class="navbar-item">ShowTime!</p>
      <a class="navbar-item" href="/livestreams">Livestreams</a>
      <a class="navbar-item" href="/integrations">Integrations</a>
      <p class="navbar-item">MCR</p>
      <a class="navbar-item" href="/channels">Channels</a>
    </div>
  </nav>
  <section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <nav class="level">
          <div class="level-left">
            <div class="level-item">
              <h1 class="title">YouTube channels</h1>
            </div>
          </div>
          <div class="level-right">
            <div class="level-item">
              <a class="button is-success" href="/oauth/google/login">New YT channel</a>
            </div>
          </div>
        </nav>
        {{ range .Integrations.YouTube }}
        <div class="column">
          <div class="card">
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <img src="{{ .Image }}">
                  </figure>
                </div>
                <div class="media-content">
                  <p class="title is-4">{{ .Name }}</p>
                </div>
              </div>
            </div>
            <footer class="card-footer">
              <a href="{{ .Link }}" target="_blank" class="card-footer-item">View</a>
              <a href="/integrations/unlink/youtube/{{ .AccountID }}" class="card-footer-item">Delete</a>
            </footer>
          </div>
        </div>
        {{ end }}

        <nav class="level">
          <div class="level-left">
            <div class="level-item">
              <h1 class="title">Mixers</h1>
            </div>
          </div>
          <div class="level-right">
            <div class="level-item">
              <a class="button is-success" href="/mixers/new">New mixer</a>
            </div>
          </div>
        </nav>
        {{ range .Integrations.Mixers }}
        <div>
          <div class="card">
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4">{{ .ID }} - {{ .Type }}</p>
                </div>
              </div>
            </div>
            <footer class="card-footer">
              <a href="/mixers/{{ .ID }}" class="card-footer-item">Enable</a>
              <a href="/mixers/{{ .ID }}/delete" class="card-footer-item">Delete</a>
            </footer>
          </div>
        {{ end }}
      </div>
  </body>
</html>
{{ end }}
